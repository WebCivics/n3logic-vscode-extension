{

  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "'", "close": "'" },
    { "open": "\"", "close": "\"" },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" }
  ],
  "surroundingPairs": [
    { "open": "'", "close": "'" },
    { "open": "\"", "close": "\"" },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" }
  ],
  "onEnterRules": [
    {
      "beforeText": ".*\\{[^}]*$",
      "action": { "indentAction": "Indent", "indent": "indent" }
    },
    {
      "beforeText": ".*\\}.*$",
      "action": { "indentAction": "Outdent", "indent": "outdent" }
    },
    {
      "beforeText": ".*\\[[^\\]]*$",
      "action": { "indentAction": "Indent", "indent": "indent" }
    },
    {
      "beforeText": ".*\\].*$",
      "action": { "indentAction": "Outdent", "indent": "outdent" }
    },
    {
      "beforeText": ".*\\([^)]*$",
      "action": { "indentAction": "Indent", "indent": "indent" }
    },
    {
      "beforeText": ".*\\).*$",
      "action": { "indentAction": "Outdent", "indent": "outdent" }
    }
  ]
}
